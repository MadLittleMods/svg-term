{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "outDir": "lib/",
    "rootDir": "src/",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "typings/**/*.d.ts"]
}
